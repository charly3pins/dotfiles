[includeIf "gitdir:~/Code/"]
    path = ~/.gitconfig_personal
[includeIf "gitdir:~/Code/arex/"]
    path = ~/.gitconfig_arex
[includeIf "gitdir:~/Code/go/src/github.com/arexio/"]
    path = ~/.gitconfig_arex

[url "git@github.com:"]
	insteadOf = https://github.com/

[color]
  diff = auto
  status = auto
  branch = auto

[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim

[fetch]
  prune = true

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[apply]
  whitespace = fix

[init]
	defaultBranch = main

[user]
	name = charly3pins
    email = charlyfb90@gmail.com

# COLORS
# ------
# Dracula Dark Theme
[color]
  ui = auto
[color "branch"]
  current = cyan bold reverse
  local = white
  plain =
  remote = cyan
[color "diff"]
  commit =
  func = cyan
  plain =
  whitespace = magenta reverse
  meta = white
  frag = cyan bold reverse
  old = red
  new = green
[color "grep"]
  context =
  filename =
  function =
  linenumber = white
  match =
  selected =
  separator =
[color "interactive"]
  error =
  header =
  help =
  prompt =
[color "status"]
  added = green
  changed = yellow
  header =
  localBranch =
  nobranch =
  remoteBranch = cyan bold
  unmerged = magenta bold reverse
  untracked = red
  updated = green bold

